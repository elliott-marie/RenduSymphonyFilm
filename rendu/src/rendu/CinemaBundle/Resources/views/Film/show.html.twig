{# src\rendu\CinemaBundle\Resources\views\Film\show.html.twig #}
{% extends 'renduCinemaBundle::layout.html.twig' %}

{% block title %}{{ film.titre }}{% endblock %}

{% block body %}

    <div class="col-md-3">
        <p class="lead">Cinéma</p>
        <div class="list-group">
            <a href="{{ path('page_films') }}" class="list-group-item active">Films</a>
            <a href="{{ path('page_realisateurs') }}" class="list-group-item">Réalisateurs</a>
        </div>
    </div>

<h1>{{ film.titre }}</h1>

<h2>{{ film.genre }}</h2>

<span><strong>Réalisé par {{ film.realisateur }}</strong></span>

<p>{{ film.synopsis }}</p>

<span>{{ film.dateSortie | date('d/m/Y') }}</span>

{% endblock %}
