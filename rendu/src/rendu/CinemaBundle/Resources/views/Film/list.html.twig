{# src\rendu\CinemaBundle\Resources\views\Film\list.html.twig #}
<h1>{{ titre|upper }} ({{ films|length }})</h1>

<ul class="liste">
    {% for film in films %}
        <li>
            <h2><a href="{{ path('page_film', {'id': film.id}) }}">{{ film.titre }}</a></h2>

                <span>{{ film.realisateur }}</span>
        </li>
    {% endfor %}
</ul>