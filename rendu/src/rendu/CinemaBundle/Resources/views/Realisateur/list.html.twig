{% extends 'renduCinemaBundle::layout.html.twig' %}

{% block title %}Liste des Réalisateurs{% endblock %}

{% block body %}

    <div class="container">

    <div class="row">

    <div class="col-md-3">
        <p class="lead">Cinéma</p>
        <div class="list-group">
            <a href="{{ path('page_films') }}" class="list-group-item">Films</a>
            <a href="{{ path('page_realisateurs') }}" class="list-group-item active">Réalisateurs</a>
        </div>
    </div>

    <div class="col-md-9">
        <h1> {{ titre|upper }} ({{ realisateurs|length }})</h1>

    {% for realisateur in realisateurs %}

        <div class="well">
        <div class="row">
            <div class="col-md-12">
                <strong>{{ realisateur.prenom }} {{ realisateur.nom }}</strong> ({{ 2017 - realisateur.dateNaissance|date('Y') }} ans)
                <br />
                    {{ realisateur.description }}
                <hr />
                <div class="text-right">
                    <a href="{{ path('page_realisateur-films', {'id':realisateur.id}) }}" class="btn btn-success">Voir ses films</a>
                </div>
            </div>
        </div>
        </div>

    {% endfor %}

    </div>
    </div>
    </div>

{% endblock %}